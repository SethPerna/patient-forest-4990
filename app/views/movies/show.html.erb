<h1>Title: <%= @movie.title %></h1>
<p>Creation Year: <%= @movie.creation_year %></p>
<p>Genre: <%= @movie.genre %></p>
<% @actors.each do |actor| %>
  <p>Actors: <%= actor.name %></p>
<% end %>
<p>Age: <%= @average %></p>
<%= form_with url: "/movies/#{@movie.id}", method: :post, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :age %>
  <%= form.text_field :age %>

  <%= form.submit "Add Actor" %>
<% end %>
